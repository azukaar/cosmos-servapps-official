{
  "cosmos-installer": {
    "form": [
      {
        "name": "configPath",
        "label": "What is the path to your custom config? (leave empty to not mount anything)",
        "initialValue": "/config",
        "type": "text"
      },
      {
        "name": "addonPath",
        "label": "What is the path to your custom addons? (leave empty to not mount anything)",
        "initialValue": "/addons",
        "type": "text"
      }
    ]
  },
  "minVersion": "0.9.0",
  "services": {
    "{ServiceName}": {
      "image": "odoo:17.0",
      "environment": [
        "HOST={ServiceName}-mydb",
        "USER=odoo",
        "PASSWORD={Passwords.0}"
      ],
      "hostname": "{ServiceName}",
      "container_name": "{ServiceName}",
      "network_mode": "cosmos-{ServiceName}",
      "labels": {
        "cosmos.stack": "{ServiceName}",
        "cosmos.stack.main": "true"
      },
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8069",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "CORSOrigin": "*",
          "SmartShield": {
            "Enabled": true
          }
        }
      ],
      {/if}
      "volumes": [
        {
          "source": "{ServiceName}-webdata",
          "target": "/var/lib/odoo",
          "type": "volume"
        }
        {if Context.configPath}
        , {
          "source": "{Context.configPath}",
          "target": "/etc/odoo",
          "type": "bind"
        }
        {/if}
        {if Context.addonPath}
        , {
          "source": "{Context.addonPath}",
          "target": "/mnt/extra-addons",
          "type": "bind"
        }
        {/if}
      ]
    },
    "{ServiceName}-mydb": {
      "image": "postgres:15",
      "environment": [
        "POSTGRES_DB=postgres",
        "POSTGRES_PASSWORD={Passwords.0}",
        "POSTGRES_USER=odoo",
        "PGDATA=/var/lib/postgresql/data/pgdata"
      ],
      "hostname": "{ServiceName}-mydb",
      "container_name": "{ServiceName}-mydb",
      "network_mode": "cosmos-{ServiceName}",
      "volumes": [
        {
          "source": "{ServiceName}-db",
          "target": "/var/lib/postgresql/data/pgdata",
          "type": "volume"
        }
      ],
      "labels": {
        "cosmos.stack": "{ServiceName}"
      }
    }
  },
  "networks": {
    "cosmos-{ServiceName}": {}
  }
}
