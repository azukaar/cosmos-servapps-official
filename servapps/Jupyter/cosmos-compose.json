{
  "cosmos-installer": {
    "form": [
      {
        "name": "openPorts",
        "label": "Choose interface port to avoid collision with other containers.",
        "initialValue": "8888",
        "type": "number"
      },
      {
        "name": "jovyanROOT",
        "label": "Do you want to make Jovyan sudo user ?",
        "initialValue": false,
        "type": "checkbox"
      }
    ],

    "post-install": [
      {
        "type": "info",
        "label": "App was sucessfully installed..."
      }
    ]
  },
  "minVersion": "0.13.1",
  "services": {
    "{ServiceName}": {
      "image": "quay.io/jupyter/datascience-notebook:latest",
      "container_name": "{ServiceName}",
      "hostname": "{ServiceName}",
      "restart": "unless-stopped",
      "command": "start-notebook.py --ServerApp.root_dir=/home/jovyan/work --NotebookApp.token=''",
      {if Context.jovyanROOT}
      "user": "root",
      "environment": [
        "GRANT_SUDO=yes"
      ],
      {/if}
      "UID": 1000,
      "GID": 1000,
      "ports": [
        "{Context.openPorts}:8888/tcp"
      ],
      "labels": {
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/Jupyter/icon.png"
      },
      "volumes": [
        {
          "source": "{ServiceName}-work",
          "target": "/home/jovyan/work",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-datasets",
          "target": "/home/jovyan/datasets",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-modules",
          "target": "/home/jovyan/modules",
          "type": "volume"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8888",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "AuthEnabled": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
