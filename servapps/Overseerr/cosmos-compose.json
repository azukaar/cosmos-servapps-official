
{ 
  "cosmos-installer": {
    "form": [
      {
        "name": "checkRadarr",
        "label": "Do you want to link this service to Radarr?",
        "initialValue": false,
        "type": "checkbox"
      }
      {if Context.checkRadarr}
      , {
          "name": "radarr",
          "name-container": "radarr-name",
          "label": "Which container is Radarr?",
          "type": "container"
        }
        {if Context.radarr}
        , {
            "type": "warning",
            "label": "When you first start Overseerr, please connect it to Radarr by using the URL: {Context.radarr}"
          }
        {/if}
      {/if}
      , {
        "name": "checkSonarr",
        "label": "Do you want to link this service to Sonarr?",
        "initialValue": false,
        "type": "checkbox"
      }
      {if Context.checkSonarr}
      , {
          "name": "sonarr",
          "name-container": "sonarr-name",
          "label": "Which container is Sonarr?",
          "type": "container"
        }
        {if Context.sonarr}
        , {
            "type": "warning",
            "label": "When you first start Overseerr, please connect it to Sonarr by using the URL: {Context.sonarr}"
        }
        {/if}
      {/if}
    ],
    "post-install": [
      {if Context.radarr}
      {
        "type": "warning",
        "label": "When you first start Overseerr, please connect it to Radarr by using the URL: {Context.radarr}"
      }
        {if Context.sonarr}
        ,
        {/if}
      {/if}
      {if Context.sonarr}
      {
        "type": "warning",
        "label": "When you first start Overseerr, please connect it to Sonarr by using the URL: {Context.sonarr}"
      }
      {/if}
    ]
  },
  "minVersion": "0.8.0",
  "services": {
    "{ServiceName}": {
      "image": "lscr.io/linuxserver/overseerr:latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/Overseerr/icon.png"
      },
      "volumes": [
        {
          "source": "{ServiceName}-config",
          "target": "/config",
          "type": "volume"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:5055",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          },
          "AuthEnabled": true
        }
      ]
      , "links": [
        {if Context.radarr}
        "{Context.radarr-name}"
          {if Context.sonarr}
          ,
          {/if}
        {/if}
        {if Context.sonarr}
        "{Context.sonarr-name}"
        {/if}
      ]
    }
  }
}