
{
  "cosmos-installer": {
    "form": [
      {
        "name": "adminOnly",
        "label": "Do you want to make this service admin only?",
        "initialValue": false,
        "type": "checkbox"
      },
      {
        "name": "sonarr",
        "name-container": "sonarr-name",
        "label": "Where is your Sonarr instance? (leave blank if none)",
        "type": "container"
      },
      {
        "name": "radarr",
        "name-container": "radarr-name",
        "label": "Where is your Radarr instance? (leave blank if none)",
        "type": "container"
      },
      {
          "name": "lidarr",
          "name-container": "lidarr-name",
          "label": "Where is your Lidarr instance? (leave blank if none)",
          "type": "container"
      },  
      {
          "name": "readarr",
          "name-container": "readarr-name",
          "label": "Where is your Readarr instance? (leave blank if none)",
          "type": "container"
      },
      {
          "name": "downloader",
          "name-container": "downloader-name",
          "label": "What downloader do you want to use?",
          "type": "container"
      }
      {if Context.downloader}
      , {
        "type": "warning",
        "label": "When you first start Prowlarr, please connect it to your downloader by using the URL: {Context.downloader}. Don't forget to also add your applications and add the server links and corresponding API key (i.e. http://{ServiceName}:9696 and http://{Context.sonarr}:8989 along with sonarr API key)"
      }
      {/if}  
    ]
  },
  "minVersion": "0.8.0",
  "services": {
    "{ServiceName}": {
      "image": "lscr.io/linuxserver/prowlarr:latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://cdn.jsdelivr.net/gh/walkxcode/dashboard-icons@master/png/prowlarr.png"
      },
      "volumes": [
        {
          "source": "{ServiceName}-config",
          "target": "/config",
          "type": "volume"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:9696",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          },
          "AuthEnabled": true
          {if Context.adminOnly}
           , "AuthAdmin": true
          {/if}
        }
      ],
      "links": [
        {if Context.sonarr}
          {if Context.radarr}
            {if Context.lidarr}
              {if Context.readarr}
                {if Context.downloader}
                  "{Context.sonarr-name}","{Context.radarr-name}","{Context.lidarr-name}","{Context.readarr-name}","{Context.downloader-name}"
                {else}
                  "{Context.sonarr-name}","{Context.radarr-name}","{Context.lidarr-name}","{Context.readarr-name}"
                {/if}
              {else}
                "{Context.sonarr-name}","{Context.radarr-name}","{Context.lidarr-name}"
                {if Context.downloader}
                  ,"{Context.downloader-name}"
                {/if}
              {/if}
            {else}
              "{Context.sonarr-name}","{Context.radarr-name}"
              {if Context.readarr}
                ,"{Context.readarr-name}"
              {/if}
              {if Context.downloader}
                ,"{Context.downloader-name}"
              {/if}
            {/if}
          {else}
            "{Context.sonarr-name}"
            {if Context.lidarr}
              ,"{Context.lidarr-name}"
            {/if}
            {if Context.readarr}
              ,"{Context.readarr-name}"
            {/if}
            {if Context.downloader}
              ,"{Context.downloader-name}"
            {/if}
          {/if}
        {else}
          {if Context.radarr}
            {if Context.lidarr}
              {if Context.readarr}
                {if Context.downloader}
                  "{Context.radarr-name}","{Context.lidarr-name}","{Context.readarr-name}","{Context.downloader-name}"
                {else}
                  "{Context.radarr-name}","{Context.lidarr-name}","{Context.readarr-name}"
                {/if}
              {else}
                "{Context.radarr-name}","{Context.lidarr-name}"
                {if Context.downloader}
                  ,"{Context.downloader-name}"
                {/if}
              {/if}
            {else}
              "{Context.radarr-name}"
              {if Context.readarr}
                ,"{Context.readarr-name}"
              {/if}
              {if Context.downloader}
                ,"{Context.downloader-name}"
              {/if}
            {/if}
          {else}
            {if Context.lidarr}
              {if Context.readarr}
                {if Context.downloader}
                  "{Context.lidarr-name}","{Context.readarr-name}","{Context.downloader-name}"
                {else}
                  "{Context.lidarr-name}","{Context.readarr-name}"
                {/if}
              {else}
                "{Context.lidarr-name}"
                {if Context.downloader}
                  ,"{Context.downloader-name}"
                {/if}
              {/if}
            {else}
              {if Context.readarr}
                {if Context.downloader}
                  "{Context.readarr-name}","{Context.downloader-name}"
                {else}
                  "{Context.readarr-name}"
                {/if}
              {else}
                {if Context.downloader}
                  "{Context.downloader-name}"
                {/if}
              {/if}
            {/if}
          {/if}
        {/if}
      ]
    }
  }
}
